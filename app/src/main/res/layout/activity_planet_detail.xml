<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.planet.details.PlanetDetailActivity">

    <View
        android:id="@+id/star_wars_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_dark_mode" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="51dp"
        android:contentDescription="@string/back_button"
        android:src="@drawable/arrow_left_yellow" />

    <ScrollView
        android:id="@+id/character_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="33dp"
        android:layout_marginTop="51dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/planet_name"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal|top"
                android:fontFamily="@font/starjedi_special_edition"
                android:text="@string/planet"
                android:textAppearance="@style/text_yellow"
                android:textSize="@dimen/text_size_small_title" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>