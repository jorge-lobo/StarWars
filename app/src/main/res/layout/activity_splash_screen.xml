<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">

    <View
        android:id="@+id/star_wars_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/star_wars_bg" />

    <View
        android:id="@+id/star_wars_logo_large"
        android:layout_width="@dimen/star_wars_logo_large_width"
        android:layout_height="@dimen/star_wars_logo_large_height"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="340dp"
        android:background="@drawable/star_wars_logo" />

</RelativeLayout>