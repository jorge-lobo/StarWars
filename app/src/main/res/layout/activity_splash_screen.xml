<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.SplashScreenActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.starwarsjunior.ui.SplashScreenViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/star_wars_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_dark_mode" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_above="@id/star_wars_logo_large"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/yellow"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}" />

        <View
            android:id="@+id/star_wars_logo_large"
            android:layout_width="@dimen/star_wars_logo_large_width"
            android:layout_height="@dimen/star_wars_logo_large_height"
            android:layout_centerInParent="true"
            android:background="@drawable/star_wars_logo" />

    </RelativeLayout>

</layout>