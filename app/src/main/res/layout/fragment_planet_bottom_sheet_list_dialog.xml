<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.planet.PlanetBottomSheetFragment">

    <View
        android:id="@+id/filters_container"
        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:layout_alignParentTop="true"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="39dp">

        <View
            android:id="@+id/top_edge"
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle" />

        <ImageView
            android:id="@+id/filter_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/top_edge"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/filter_icon"
            android:src="@drawable/sliders" />

        <TextView
            android:id="@+id/textview1"
            android:layout_width="148dp"
            android:layout_height="26dp"
            android:layout_below="@id/filter_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/starjedi_special_edition"
            android:text="text1"
            android:textAppearance="@style/text_yellow"
            android:textSize="@dimen/text_size_medium" />

        <LinearLayout
            android:id="@+id/buttons1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview1"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="24dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/filter_buttons"
                android:fontFamily="@font/starjedi_special_edition"
                android:gravity="center"
                android:textAppearance="@style/text_black"
                android:textOff="button1"
                android:textOn="button1"
                android:textSize="@dimen/text_size_medium" />

            <ToggleButton
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/filter_buttons"
                android:fontFamily="@font/starjedi_special_edition"
                android:gravity="center"
                android:textAppearance="@style/text_black"
                android:textOff="button2"
                android:textOn="button2"
                android:textSize="@dimen/text_size_medium" />

            <ToggleButton
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/filter_buttons"
                android:fontFamily="@font/starjedi_special_edition"
                android:gravity="center"
                android:textAppearance="@style/text_black"
                android:textOff="button3"
                android:textOn="button3"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttons1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/starjedi_special_edition"
            android:text="text2"
            android:textAppearance="@style/text_yellow"
            android:textSize="@dimen/text_size_medium" />

        <LinearLayout
            android:id="@+id/buttons2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview2"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="25dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/filter_buttons"
                android:fontFamily="@font/starjedi_special_edition"
                android:gravity="center"
                android:textAppearance="@style/text_black"
                android:textOff="button4"
                android:textOn="button4"
                android:textSize="@dimen/text_size_medium" />

            <ToggleButton
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/filter_buttons"
                android:fontFamily="@font/starjedi_special_edition"
                android:gravity="center"
                android:textAppearance="@style/text_black"
                android:textOff="button5"
                android:textOn="button5"
                android:textSize="@dimen/text_size_medium" />

            <ToggleButton
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/filter_buttons"
                android:fontFamily="@font/starjedi_special_edition"
                android:gravity="center"
                android:textAppearance="@style/text_black"
                android:textOff="button6"
                android:textOn="button6"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <!--   search button     -->
        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/buttons2"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_full_width"
            android:fontFamily="@font/starjedi_special_edition"
            android:gravity="center"
            android:text="@string/search"
            android:textAppearance="@style/text_black"
            android:textSize="@dimen/text_size_extra_large" />

    </RelativeLayout>

</RelativeLayout>