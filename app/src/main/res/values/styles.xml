<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text Styles -->
    <style name="text_yellow">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:fontFamily">"@font/starjedi_special_edition"</item>
    </style>

    <style name="text_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">"@font/starjedi_special_edition"</item>
    </style>

    <!-- Button Styles -->
    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:background">@drawable/button_full_width</item>
    </style>

</resources>